generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//Account
model Account{
  id String @id @default(auto()) @map ("_id") @db.ObjectId
  email String @unique
  password String
  name String
  addressLine1 String?
  addressLine2 String?
  city String
  state String
  country String
  zip String
  phone String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  emailVerified DateTime?
}


//VerificationToken
model VerificationToken{
  id String @id @default(auto()) @map ("_id") @db.ObjectId
  identifier String
  token String @unique
  expires DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([identifier, token])
}

